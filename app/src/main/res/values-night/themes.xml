<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Disco_Orario_Sveglia_20" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/backgroundDark</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorSecondary">@color/primaryColorDark</item>
        <item name="colorTertiary">@color/tertiaryColorDark</item>
        <item name="colorAccent">@color/primaryColorDark</item>
        <item name="colorControlActivated">@color/primaryColorDark</item>
        <item name="colorSwitchThumbNormal">@color/tertiaryColorDark</item>
        <item name="background">@color/backgroundDark</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/bottomNavDark</item>
        <item name="itemIconTint">@color/primaryColorDark</item>
        <item name="itemTextColor">@color/primaryColorDark</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="Widget.App.TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/backgroundDark</item>
        <item name="clockHandColor">@color/primaryColorDark</item>
        <item name="clockNumberTextColor">@color/primaryColorDark</item>
    </style>
</resources>